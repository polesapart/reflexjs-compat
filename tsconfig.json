{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "incremental": true,
    "removeComments": true,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist/**"
  ],

  "include": [
    "src/*"
  ]
}
